$textareaHeight = 60px;

html {
  position: relative;
  min-height: 100%;
}

body {
  /* Margin bottom by footer height */
  margin-bottom: $textareaHeight
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: $textareaHeight
  background-color: #f5f5f5;
}

#textarea textarea {
  resize:none
}
